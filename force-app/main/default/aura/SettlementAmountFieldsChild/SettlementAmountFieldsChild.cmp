<aura:component >    
    <!-- Aura Attribute for store single Contact[standard Object] Instance
         And Store Index of Particular Instance --> 
    <aura:attribute name="offerInstance" type="string"/>
    <aura:attribute name="rowIndex" type="String"/>
    <aura:attribute name="currentBal" type="currency"/>
    <aura:attribute name="verifiedBal" type="currency"/>
    <aura:attribute name="TotalOfferAmount" type="currency"/>
    
    <!-- Register 2 Lightning Event for handle add or Delete rows on Parent Component  --> 
    <aura:registerEvent name="DeleteRowEvt" type="c:DeleteRowEvt"/> 
    <aura:registerEvent name="AddRowEvt" type="c:AddNewRowEvt"/> 
    
    <!-- Table Row -->   
    <tr class="slds-text-title_caps">
        <td> 
            {!v.rowIndex + 1}
        </td>
        <td>
            <!--<ui:inputText class="slds-input" value="{!v.offerInstance.nu_dse__Offer_Type__c}"/>-->
            <lightning:select name="select1">
                <option value="">Creditor</option>
                <option value="1">Negotaitor</option>
            </lightning:select>
        </td>
        <td>
            <Lightning:input aura:id="comboBox" type="number" value="{!v.offerInstance.nu_dse__Offer_Amount__c}" onchange="{!c.getPercentages}"/>
        </td>
        <td>
            <Lightning:input  type="number" value="{!v.currentBal}" readonly="true"/>
        </td>
        <td>
            <Lightning:input  type="number" value="{!v.verifiedBal}" readonly="true"/>
        </td>
        <td>
            <ui:inputCheckbox aura:id="checkbox" label="" change="{!c.onCheck}"/>
        </td>
        <td>
            <ui:outputCurrency value="{!v.TotalOfferAmount}"/>
        </td>
        <td>
            <!-- conditionally Display Add or Delete Icons
                 if rowIndex is 0 then show Add New Row Icon else show delete Icon
             --> 
            <aura:if isTrue="{!v.rowIndex == 0}">
                <a onclick="{!c.AddNewRow}">
                  <lightning:icon iconName="utility:add" class="slds-icon slds-icon_small" size="small" alternativeText="add"/>
                  <span class="slds-assistive-text">Add Icon</span>
                </a>    
              <aura:set attribute="else">
                  <a onclick="{!c.removeRow}">
                   <lightning:icon variant="error" iconName="utility:delete" class="slds-icon slds-icon_small" size="small" alternativeText="icon"/>
                   <span class="slds-assistive-text">Delete Icon</span>
                  </a>
              </aura:set> 
            </aura:if>
        </td> 
    </tr>
    
</aura:component>